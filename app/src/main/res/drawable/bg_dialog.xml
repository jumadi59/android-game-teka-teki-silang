<?xml version="1.0" encoding="utf-8"?>
<layer-list
        xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
                android:shape="rectangle">
            <corners
                    android:radius="10dp"/>
            <solid
                    android:color="#fff" />
        </shape>
    </item>
    <item
            android:left="2dp"
            android:right="2dp"
            android:top="2dp"
            android:bottom="2dp">
        <shape
                android:shape="rectangle">
            <corners
                    android:radius="10dp"/>
            <solid
                    android:color="#e7e7e7"/>
        </shape>
    </item>
</layer-list>
